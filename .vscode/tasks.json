{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "linux": {
        "command": "/bin/bash"
    },
    "windows": {
        "command": "C:\\Program Files\\git\\bin\\bash.exe"
    },
    "suppressTaskName": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "args": ["build.sh"],
            "isBuildCommand": true
        },
        {
            "taskName": "bake",
            "args": ["../k8s-l5d/scripts/bake.sh", "stephpr/service-b"]
        },
        {
            "taskName": "deploy",
            "args": ["../k8s-l5d/scripts/deploy.sh", "service-b", "stephpr/service-b"]
        },
        {
            "taskName": "ci",
            "args": ["../k8s-l5d/scripts/bake.sh", "stephpr/service-b", "Release"]
        },
        {
            "taskName": "cd",
            "args": ["../k8s-l5d/scripts/deploy.sh", "service-b", "stephpr/service-b", "Release"]
        }
    ]
}