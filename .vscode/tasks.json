{
    "version": "2.0.0",
    "tasks": [
        // Local tasks
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/service-b.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        // Docker tasks
        {
            "label": "docker: rm",
            "type": "shell",
            "command": "docker",
            "osx": {
                "args": [
                    "rm",
                    "-f",
                    "service-b",
                    "||",
                    "echo",
                    "-n"
                ]
            },
            "windows": {
                "args": [
                    "rm",
                    "-f",
                    "service-b",
                    "|",
                    "echo",
                    ".>nul"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "docker: build",
            "dependsOn": "docker: rm",
            "type": "process",
            "command": "docker",
            "args": [
                "build",
                "-f",
                "Dockerfile.develop",
                "-t",
                "service-b",
                "."
            ],
            "problemMatcher": []
        },
        // Mindaro tasks
        {
            // This is eventually done automatically by the extension
            "label": "mindaro: up",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",
                "-i",
                "microsoft/vsdbg@/vsdbg:/vsdbg",
                "--daemon"
            ],
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "build (mindaro)",
            "type": "process",
            "command": "mindaro",
            "args": [
                "exec",
                "dotnet",
                "build",
                "service-b.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}