{
    "version": "2.0.0",
    "tasks": [
        // Local tasks
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/service-b.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        // Docker tasks
        {
            "label": "docker: rm",
            "type": "shell",
            "command": "docker",
            "osx": {
                "args": [
                    "rm",
                    "-f",
                    "service-b",
                    "||",
                    "echo",
                    "-n"
                ]
            },
            "windows": {
                "args": [
                    "rm",
                    "-f",
                    "service-b",
                    "|",
                    "echo",
                    ".>nul"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "docker: build",
            "dependsOn": "docker: rm",
            "type": "process",
            "command": "docker",
            "args": [
                "build",
                "-f",
                "Dockerfile.develop",
                "-t",
                "service-b",
                "."
            ],
            "problemMatcher": []
        },
        // Mindaro tasks
        {
            // This is eventually done automatically by the extension
            "label": "mindaro: start",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",
                "--daemon",
                "--import",
                "microsoft/vsdbg:<necessary version>@/vsdbg:/vsdbg",
                "--sync",
                "*;:*.sln:!*.*proj"
            ],
            "problemMatcher": [],
            "isBackground": true
        },
        {
            // This instructs the daemon to ensure everything is ready
            // Given the sync settings, it will only rebuild the
            // image if any *.sln or *.*proj files have changed
            "label": "mindaro: up",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",
                "--incremental",
                "--detach"
            ],
            "problemMatcher": []
        },
        {
            // This is the Mindaro equivalent of the "build" task
            "label": "build (mindaro)",
            "dependsOn": "mindaro: up",
            "type": "process",
            "command": "mindaro",
            "args": [
                "exec",
                "dotnet",
                "build",
                "service-b.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}